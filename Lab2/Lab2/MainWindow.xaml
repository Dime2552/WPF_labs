<Window x:Class="Lab2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <DockPanel>

        <Label Content="Label" DockPanel.Dock="Top" HorizontalAlignment="Center" Padding="5"/>
        <TextBlock TextWrapping="Wrap" Text="TextBlock" DockPanel.Dock="Left" 
                   Width="200"/>
        <TextBlock TextWrapping="Wrap" Text="TextBlock" DockPanel.Dock="Right" 
                   Width="200" />
        <Button Content="Button" DockPanel.Dock="Bottom" Width="114" Height="22" 
                HorizontalAlignment="Center" Margin="40" VerticalAlignment="Bottom"/>
    </DockPanel>
</Window>
