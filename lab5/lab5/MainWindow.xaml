<Window x:Class="lab5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab5"
        mc:Ignorable="d"
        Title="Каталог товарів" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <TabControl Name="MainTabControl" Margin="5">
            <!-- Вкладка 1: Товари -->
            <TabItem Header="Товари">
                <Grid>
                    <DataGrid Name="ProductsDataGrid" AutoGenerateColumns="False" Margin="5" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Артикул}" />
                            <DataGridTextColumn Header="Одиниця виміру" Binding="{Binding Одиниця}" />
                            <DataGridTextColumn Header="Кількість" Binding="{Binding Кількість}" />
                            <DataGridTextColumn Header="Ціна" Binding="{Binding Ціна, StringFormat=C}" />
                            <!-- Додано форматування валюти -->
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 2: Одиниці виміру -->
            <TabItem Header="Одиниці виміру">
                <Grid>
                    <DataGrid Name="UnitsDataGrid" AutoGenerateColumns="False" Margin="5" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Код" Binding="{Binding Код_одиниці_виміру}" />
                            <DataGridTextColumn Header="Назва одиниці" Binding="{Binding Одиниця_виміру}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 3: Загальна кількість по одиницях виміру -->
            <TabItem Header="Кількість по одиницях">
                <Grid>
                    <DataGrid Name="QuantityByUnitDataGrid" AutoGenerateColumns="False" Margin="5" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Одиниця виміру" Binding="{Binding ОдиницяВиміру}" />
                            <DataGridTextColumn Header="Загальна кількість" Binding="{Binding ЗагальнаКількість}" />
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- Вкладка 4: Пошук товару за артикулом -->
            <TabItem Header="Пошук товару">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="5">
                        <TextBlock Text="Артикул товару:" VerticalAlignment="Center" Margin="5"/>
                        <TextBox Name="ProductSkuTextBox" Width="200" Margin="5"/>
                        <Button Name="SearchProductButton" Content="Пошук" Click="SearchProductButton_Click" Margin="5"/>
                    </StackPanel>
                    <DataGrid Name="FilteredProductsDataGrid" AutoGenerateColumns="False" Margin="5" Grid.Row="1" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Артикул}" />
                            <DataGridTextColumn Header="Одиниця виміру" Binding="{Binding Одиниця}" />
                            <DataGridTextColumn Header="Кількість" Binding="{Binding Кількість}" />
                            <DataGridTextColumn Header="Ціна" Binding="{Binding Ціна, StringFormat=C}" />
                            <!-- Додано форматування валюти -->
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

            <!-- НОВА ВКЛАДКА 5: Пошук товару за одиницею виміру -->
            <TabItem Header="Пошук за одиницею">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Margin="5" Grid.Row="0">
                        <TextBlock Text="Оберіть одиницю виміру:" VerticalAlignment="Center" Margin="5"/>
                        <!-- ComboBox для вибору одиниці виміру -->
                        <ComboBox Name="UnitComboBox" Width="200" Margin="5" VerticalAlignment="Center"/>
                        <!-- Кнопка для запуску пошуку за одиницею -->
                        <Button Name="SearchByUnitButton" Content="Знайти товари" Click="SearchByUnitButton_Click" Margin="5"/>
                    </StackPanel>
                    <!-- DataGrid для відображення товарів, знайдених за одиницею виміру -->
                    <DataGrid Name="ProductsByUnitDataGrid" AutoGenerateColumns="False" Margin="5" Grid.Row="1" IsReadOnly="True">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Артикул" Binding="{Binding Артикул}" />
                            <DataGridTextColumn Header="Одиниця виміру" Binding="{Binding Одиниця}" />
                            <DataGridTextColumn Header="Кількість" Binding="{Binding Кількість}" />
                            <DataGridTextColumn Header="Ціна" Binding="{Binding Ціна, StringFormat=C}" />
                            <!-- Додано форматування валюти -->
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>