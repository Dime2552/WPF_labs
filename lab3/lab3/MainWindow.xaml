<Window x:Class="lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:lab3"
        mc:Ignorable="d"
        Title="Конвертер чисел" Height="350" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Десяткова:" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Column="1" Text="{Binding DecimalInput, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <TextBlock Text="Двійкова:" Grid.Row="1" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="1" Grid.Column="1" Text="{Binding BinaryInput, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <TextBlock Text="Вісімкова:" Grid.Row="2" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="2" Grid.Column="1" Text="{Binding OctalInput, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <TextBlock Text="Шістнадцяткова:" Grid.Row="3" VerticalAlignment="Center" Margin="5"/>
        <TextBox Grid.Row="3" Grid.Column="1" Text="{Binding HexInput, UpdateSourceTrigger=PropertyChanged}" Margin="5"/>

        <Button Grid.Row="4" Grid.ColumnSpan="2" Content="Очистити" Command="{Binding ClearCommand}" Margin="5"/>
    </Grid>
</Window>
